        </Information>
        <Grid Name="Wedge" GridType="Uniform">
            <Topology TopologyType="Wedge"
                Dimensions="2">
                <DataItem Format="XML"
                    Dimensions="2 6"
                    NumberType="Float">
                    0 1 2 4 5 6
                    5 6 7 9 10 11
                </DataItem>
            </Topology>
            <Geometry Reference="/Xdmf/Domain/Grid[@Name='Polyvertex']/Geometry" />
