        </Information>
        <Grid Name="Triangle" GridType="Uniform">
            <Topology TopologyType="Triangle"
                Dimensions="3">
                <DataItem Format="XML"
                    Dimensions="3 3"
                    NumberType="Float">
                    0 1 2
                    4 5 6
                    8 9 10
                </DataItem>
            </Topology>
            <Geometry Reference="/Xdmf/Domain/Grid[@Name='Polyvertex']/Geometry" />
            <Attribute Name="Node Centered Values" Reference="/Xdmf/Domain/Grid[@Name='Polyvertex']/Attribute[@Name='Node Centered Values']" />
            <Attribute Name="Cell Centered Values" Center="Cell">
                <DataItem Format="XML" Dimensions="3">
                100 200 400
                </DataItem>
            </Attribute>
        </Grid>
